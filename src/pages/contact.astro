---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Headersite.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />

  <main class="px-6 pt-32 pb-20 max-w-2xl mx-auto text-white space-y-16">
    
    <h1 class="text-4xl md:text-5xl font-extrabold text-fuchsia-500">Contact</h1>

    
    <form class="space-y-10">

      
      <div class="space-y-6">
        <div>
          <label for="nom" class="block font-semibold mb-1">Nom</label>
          <input type="text" id="nom" placeholder="Nom" class="w-full px-4 py-3 text-black rounded-full" />
        </div>

        <div>
          <label for="prenom" class="block font-semibold mb-1">Prénom</label>
          <input type="text" id="prenom" placeholder="Prenom" class="w-full px-4 py-3 text-black rounded-full" />
        </div>

        <div>
          <label for="email" class="block font-semibold mb-1">Adresse e-mail</label>
          <input type="email" id="email" placeholder="exemple@mail.com" class="w-full px-4 py-3 text-black rounded-full" />
        </div>
      </div>

      
      <div class="space-y-6">
        <h2 class="text-3xl font-bold text-fuchsia-600">Décrivez votre problème</h2>

        <div>
          <label for="categorie" class="sr-only">Catégorie</label>
          <select id="categorie" class="w-full px-4 py-3 text-black rounded-full">
            <option>Sélectionnez une catégorie</option>
            <option>Bug technique</option>
            <option>Connexion</option>
            <option>Profil / compte</option>
            <option>Autre</option>
          </select>
        </div>

        <div>
          <label for="message" class="block font-semibold mb-1">Message</label>
          <textarea id="message" placeholder="Message" rows="6" class="w-full px-4 py-3 text-black rounded-xl resize-none"></textarea>
        </div>
      </div>

      
      <div class="text-right">
        <button type="submit" class="bg-gradient-to-r from-fuchsia-500 to-purple-600 text-white font-semibold px-8 py-3 rounded hover:opacity-90 transition">
          ENVOYER
        </button>
      </div>
    </form>
  </main>

  <Footer />
</Layout>
