---
import facebookIcon from '../assets/icons/Facebook.svg';
import twitterIcon from '../assets/icons/Twitter.svg';
import instagramIcon from '../assets/icons/Instagram.svg';
import hacksterixLogo from '../assets/icons/HACKSTERIX.svg';
---

<footer class="bg-black text-white py-10 px-6 md:px-20">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-start md:items-end space-y-10 md:space-y-0">
 
    <div class="space-y-4">
      <img src={hacksterixLogo.src} alt="Hacksterix logo" class="w-32" />
      <p class="text-sm text-gray-400">© 2024 Hacksterix News SARL</p>
      <div class="flex space-x-4">
        <a href="#"><img src={facebookIcon.src} alt="Facebook" class="w-6 h-6" /></a>
        <a href="#"><img src={twitterIcon.src} alt="Twitter" class="w-6 h-6" /></a>
        <a href="#"><img src={instagramIcon.src} alt="Instagram" class="w-6 h-6" /></a>
      </div>
    </div>

    <div class="flex flex-col md:flex-row gap-10 text-sm">
      
      <div>
        <h4 class="font-semibold mb-2">Hacksterix</h4>
        <ul class="space-y-1 text-gray-400">
          <li><a href="#">À propos</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-2">Support</h4>
        <ul class="space-y-1 text-gray-400">
          <li><a href="#">Centre d'aide</a></li>
          <li><a href="#">Contacter le support</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-2">Légal</h4>
        <ul class="space-y-1 text-gray-400">
          <li><a href="#">Conditions d'utilisation</a></li>
          <li><a href="#">Politique de confidentialité</a></li>
        </ul>
      </div>
      
    </div>
  </div>
</footer>
